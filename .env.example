# Project Position System Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=false

# Database
DATABASE_PATH=./data/project_position.db

# LLM Configuration (OpenAI)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# GitHub Configuration
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_ORG=your-organization
GITHUB_REPO=your-repository
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Lark (Feishu) Configuration
LARK_APP_ID=cli_your-app-id-here
LARK_APP_SECRET=your-app-secret-here
LARK_BOT_NAME=ProjectPositionBot
LARK_WEBHOOK_VERIFICATION_TOKEN=your-verification-token

# Sync Settings
SYNC_INTERVAL_SECONDS=300
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
GITHUB_SYNC_ENABLED=true
LARK_SYNC_ENABLED=true

# Task Processing
MAX_TASKS_PER_BATCH=10
AUTO_ASSIGN_TASKS=true

# Notifications
NOTIFICATION_ENABLED=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
